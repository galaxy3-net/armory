#!/usr/bin/env bash
var1=${@}

function update_resolve
{
  echo "domain ${1}" >> /etc/resolv.conf
}

cat <<__EOD__

  Processing Domains

  ${var1[@]}

__EOD__


for item in ${var1[@]}
do
  echo "Checking ${item}"
  egrep "domain ${item}" /etc/resolv.conf ||  update_resolve "${item}"
done

printf "\n\n/etc/resolv.conf\n"
cat /etc/resolv.conf

cat <<__EOD__

Finished

__EOD__


