#!/usr/bin/env bash

function update_resolve
{
  echo "domain ${1}" >> /etc/resolv.conf
}

cat <<__EOD__

  Processing Domains

  ${1}
__EOD__

var1=${@}
for item in ${var1[@]}
do
  echo "Checking ${item}"
  egrep "domain ${item}" /etc/resolv.conf ||  update_resolve "${item}"
done

cat /etc/resolv.conf

cat <<__EOD__

Finished

__EOD__


