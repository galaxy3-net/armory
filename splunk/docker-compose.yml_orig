version: "3.6"

services:
  splunk:
    image: g3splunk
    container_name: splunk
    entrypoint: /sbin/g3_entrypoint
    environment:
      - SPLUNK_START_ARGS=--accept-license
      - SPLUNK_PASSWORD='cybersecurity'
    ports:
      - 8000:8000
    volumes:
      - '/splunk/etc:/opt/splunk/etc:rw'
      - '/splunk/var:/opt/splunk/var:rw'