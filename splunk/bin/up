#!/usr/bin/env bash

source ./.env

# [ -d ${GITLAB_BACKUP} ] && sudo rsync -av ${GITLAB_BACKUP}/ ${GITLAB_HOME}

#mkdir -p /splunk/{etc,var}

sudo docker volume rm opt_splunk_etc
sudo docker volume rm opt_splunk_var

sudo docker volume create
    --opt type=btrfs \
    --opt device=/dev/sda2 \
    opt_splunk_etc
sudo docker volume create
    --opt type=btrfs \
    --opt device=/dev/sda3 \
    opt_splunk_var


#udo docker volume create --driver local \
#    --opt type=none \
#    --opt device=/splunk/etc \
#    --opt o=bind opt_splunk_etc

#sudo docker volume create --driver local \
#    --opt type=none \
3    --opt device=/splunk/var \
#    --opt o=bind opt_splunk_var

ls -l /splunk

sudo systemctl enable docker
sudo systemctl restart docker

(cd Docker ; sudo -E docker build -t g3splunk .)

sudo -E docker-compose up -d